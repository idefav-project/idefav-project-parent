        <repository>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
          <id>jforg-release</id>
          <name>libs-release</name>
          <url>http://192.168.56.134:8081/artifactory/libs-release</url>
        </repository>
        <repository>
          <snapshots />
          <id>jforg-snapshots</id>
          <name>libs-snapshot</name>
          <url>http://192.168.56.134:8081/artifactory/libs-snapshot</url>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
          <id>jforg-release</id>
          <name>libs-release</name>
          <url>http://192.168.56.134:8081/artifactory/libs-release</url>
